<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iotek.ssm.dao.ProvinceDao">
  <select id="findProvinceById" parameterType="int" resultMap="ClassResultMap" >
		SELECT * FROM city c,province p WHERE c.pid = p.id and p.id=#{id}
	</select>
	
	<select id="findAllProvince" resultMap="ClassResultMap" >
		SELECT * FROM  city c,province p where c.pid = p.id
	</select>
	
	<resultMap type="Province" id="ClassResultMap">
	   <id property="id" column="id"/>
	  <result property="name" column="name"/>
	<collection property="city" ofType="City">
		<id property="cid" column="Cid"/>
		<result property="cname" column="Cname"/>
	</collection>
	</resultMap>
</mapper>